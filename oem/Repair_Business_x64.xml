<!-- 
  Repair_Business_x64.xml - Microsoft 365 Business 64-bit Repair Configuration
  
  Repair configuration for Microsoft 365 Business/Apps installations.
  
  Usage:
    setup.exe /configure Repair_Business_x64.xml
  
  Products Included:
  - Microsoft 365 Apps for Business
  
  Language: en-us (US English)
-->
<Configuration>
  <Add OfficeClientEdition="64" Channel="Current">
    <Product ID="O365BusinessRetail">
      <Language ID="en-us" />
    </Product>
  </Add>
  
  <Updates Enabled="TRUE" />
  <Display Level="None" AcceptEULA="TRUE" />
  <Logging Level="Standard" Path="%temp%" />
  <Property Name="FORCEAPPSHUTDOWN" Value="TRUE" />
</Configuration>

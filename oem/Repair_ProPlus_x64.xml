<!-- 
  Repair_ProPlus_x64.xml - Office 365 ProPlus 64-bit Repair Configuration
  
  Repair configuration specifically for Office 365 ProPlus (64-bit) installations.
  
  Usage:
    setup.exe /configure Repair_ProPlus_x64.xml
  
  Products Included:
  - Office 365 ProPlus (all applications)
  
  Language: en-us (US English)
-->
<Configuration>
  <Add OfficeClientEdition="64" Channel="Current">
    <Product ID="O365ProPlusRetail">
      <Language ID="en-us" />
    </Product>
  </Add>
  
  <Updates Enabled="TRUE" />
  <Display Level="None" AcceptEULA="TRUE" />
  <Logging Level="Standard" Path="%temp%" />
  <Property Name="FORCEAPPSHUTDOWN" Value="TRUE" />
</Configuration>

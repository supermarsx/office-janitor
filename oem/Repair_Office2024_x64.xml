<!-- 
  Repair_Office2024_x64.xml - Office 2024 Professional Plus 64-bit Repair Configuration
  
  Repair configuration for Office 2024 (LTSC) Professional Plus installations.
  
  Usage:
    setup.exe /configure Repair_Office2024_x64.xml
  
  Products Included:
  - Office 2024 Professional Plus (Volume License)
  
  Language: en-us (US English)
-->
<Configuration>
  <Add OfficeClientEdition="64" Channel="PerpetualVL2024">
    <Product ID="ProPlus2024Volume">
      <Language ID="en-us" />
    </Product>
  </Add>
  
  <Updates Enabled="TRUE" />
  <Display Level="None" AcceptEULA="TRUE" />
  <Logging Level="Standard" Path="%temp%" />
  <Property Name="FORCEAPPSHUTDOWN" Value="TRUE" />
</Configuration>

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Office Janitor configuration file. Copy to config.json and customize. Use with: office-janitor --config config.json",

  "// Mode Options (mutually exclusive - typically set via CLI instead)": "",
  "auto-all": false,
  "target": null,
  "diagnose": false,
  "cleanup-only": false,
  "repair": null,
  "repair-config": null,

  "// Core Options": "",
  "dry-run": false,
  "force": false,
  "yes": false,
  "include": null,
  "allow-unsupported-windows": false,

  "// Uninstall Method": "",
  "uninstall-method": "auto",
  "force-app-shutdown": false,
  "no-force-app-shutdown": false,
  "product-codes": null,
  "release-ids": null,

  "// Uninstall Passes": "",
  "passes": 1,
  "max-passes": null,
  "skip-uninstall": false,

  "// Scrubbing Options": "",
  "scrub-level": "standard",
  "skip-processes": false,
  "skip-services": false,
  "skip-tasks": false,
  "skip-registry": false,
  "skip-filesystem": false,
  "registry-only": false,
  "clean-msocache": false,
  "clean-appx": false,
  "clean-wi-metadata": false,

  "// License & Activation Options": "",
  "create-restore-point": true,
  "no-restore-point": false,
  "no-license": false,
  "keep-license": false,
  "clean-spp": false,
  "clean-ospp": false,
  "clean-vnext": false,
  "clean-all-licenses": false,

  "// User Data Options": "",
  "keep-templates": false,
  "keep-user-settings": false,
  "delete-user-settings": false,
  "keep-outlook-data": false,
  "clean-shortcuts": false,
  "skip-shortcut-detection": false,

  "// Registry Cleanup Options": "",
  "clean-addin-registry": false,
  "clean-com-registry": false,
  "clean-shell-extensions": false,
  "clean-typelibs": false,
  "clean-protocol-handlers": false,
  "remove-vba": false,

  "// Output & Logging": "",
  "plan": null,
  "logdir": null,
  "backup": null,
  "timeout": null,
  "quiet": false,
  "json": false,
  "verbose": 0,

  "// TUI Options": "",
  "tui": false,
  "no-color": false,
  "tui-compact": false,
  "tui-refresh": null,
  "limited-user": false,

  "// Retry & Resilience": "",
  "retries": 4,
  "retry-delay": 3,
  "retry-delay-max": 30,
  "no-reboot": false,
  "offline": false,

  "// Repair Options": "",
  "repair-culture": "en-us",
  "repair-platform": null,
  "repair-visible": false,
  "repair-timeout": 3600,

  "// OEM Configuration Presets": "",
  "oem-config": null,

  "// ODT XML Build Options": "",
  "odt-build": false,
  "odt-preset": null,
  "odt-products": null,
  "odt-languages": null,
  "odt-arch": "64",
  "odt-channel": null,
  "odt-output": null,
  "odt-shared-computer": false,
  "odt-remove-msi": false,
  "odt-exclude-apps": null,
  "odt-include-visio": false,
  "odt-include-project": false,
  "odt-removal": false,
  "odt-download": null,

  "// OffScrub Legacy Compatibility": "",
  "offscrub-all": false,
  "offscrub-ose": false,
  "offscrub-offline": false,
  "offscrub-quiet": false,
  "offscrub-test-rerun": false,
  "offscrub-bypass": false,
  "offscrub-fast-remove": false,
  "offscrub-scan-components": false,
  "offscrub-return-error": false,

  "// Advanced Options": "",
  "skip-preflight": false,
  "skip-backup": false,
  "skip-verification": false,
  "schedule-reboot": false,
  "no-schedule-delete": false,
  "msiexec-args": null,
  "c2r-args": null,
  "odt-args": null
}
